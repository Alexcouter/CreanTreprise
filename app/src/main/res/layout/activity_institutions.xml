<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33b5e5"
    tools:context="${relativePackage}.${activityClass}" >

    <ImageView
        android:id="@+id/logoentreprise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/logo_application"
        android:src="@drawable/entrepriselogobright"
        android:layout_alignBottom="@+id/accueilInstitution"
        android:scaleType="centerInside"
        android:layout_alignWithParentIfMissing="false"
        android:layout_toLeftOf="@+id/accueilInstitution"
        android:layout_alignTop="@+id/accueilInstitution"
        android:layout_toRightOf="@+id/scrollView"
        android:layout_toEndOf="@+id/scrollView" />

    <Button
        android:id="@+id/accueilInstitution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Accueil"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/logoentreprise"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Institutions en Mayenne"
        android:textSize="30sp"
        android:id="@+id/titreInstitutions"
        android:textAlignment="center"
        android:layout_alignTop="@+id/scrollView"
        android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textIsSelectable="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/scrollView"
            android:id="@+id/layoutsansnom">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Conseil départemental d’accès au droit"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:textSize="15sp"
            android:id="@+id/entreprendreMayenne"
            android:layout_below="@+id/titreInstitutions"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:layout_gravity="center" />

        <TextView
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:text="Ils assurent, par le biais d’un assistant de justice, juriste, des permanences d’informations et d’orientations juridiques, le mercredi au contrat urbain de cohésion sociale de l’agglomération lavalloise de 10 h à 12 h et de 14 h à 17 h à la maison des services publics de saint Nicolas."
                android:textSize="10sp"
                android:id="@+id/entreprendreMayennetxt"
            android:layout_below="@+id/entreprendreMayenne"
            android:layout_alignLeft="@+id/titreInstitutions"
            android:layout_alignStart="@+id/titreInstitutions"
            android:layout_gravity="center"
            android:background="@android:color/background_light" />

        <Button
            android:id="@+id/entreprendreMayenneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="informations complémentaires" />
        />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tribunal de commerce de Laval"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:textSize="15sp"
            android:id="@+id/initiativeMayenne"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Les tribunaux de commerce (T.C.) tranchent les litiges entre commerçants ou entre associés de sociétés commerciales, et ceux qui portent sur les actes de commerce et des défaillances d’entreprises commerciales ou artisanales : sauvegarde, redressement, liquidation judiciaire..."
            android:textSize="10sp"
            android:id="@+id/initiativeMayennetxt"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:background="@android:color/background_light" />
        <Button
            android:id="@+id/initiativeMayenneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="Informations complémentaires" />
        />
        />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reseau entreprendre Mayenne"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:textSize="15sp"
            android:id="@+id/creationReprise"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notre mission est de contribuer à la réussite de nouveaux entrepreneurs significativement créateurs d'emplois et de richesses."
            android:textSize="10sp"
            android:id="@+id/creationReprisetxt"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:background="@android:color/background_light" />
        <Button
            android:id="@+id/creationReprisesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="Informations complémentaires" />
        />
        />


    </LinearLayout>



</RelativeLayout>